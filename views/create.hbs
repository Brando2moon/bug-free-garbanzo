<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<title>Wiki</title>
		<link rel="stylesheet" href="/css/site.css" />
	</head>

	<body>
		<div>
			<aside>
				<div class="center">
					<link rel="stylesheet" href="/css/site.css" />
				</div>

				<nav>
					<a href="/index">Main Page</a>
					<a href="/allArticle">All Articles</a>
					<form>
						<input type="text" />
						<input type="submit" value="Search" />
					</form>
					<a href="/create">Create New Article</a>
				</nav>
			</aside>
			<div id="container">
				<header>
					<a href="/">Login</a>
					<a href="/reg">Register</a>
					{{#if user}}
						{{#with user}}
							<span>Welcome, {{username}}!</span>
							<a href="/logout">[Logout]</a>
						{{else}}
							<span>Welcome, Fellowfan!</span>
						{{/with}}
					{{/if}}
				</header>
				<main>
					<h1>Welcome to My Hero FanWiki!</h1>
					{{#if errors}}

						<section id="notifications">
							<p>Article description should be at least 20
								characters long...</p>
						</section>
					{{/if}}
					<section>
						<h2>Create new article</h2>
						<div class="spacer">
							<form action="/create" method="POST">
								<label>Article title</label>
								<input type="text" name="title" class="title" />
								<label>Content</label>

								<textarea name="content"></textarea>
								<input type="submit" value="Submit" />
							</form>
						</div>
					</section>
				</main>
				<footer>
					KingUni Wiki &copy; 2020
				</footer>
			</div>
		</div>
	</body>

</html>